<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

<!--1) student -->
<!-- 2) teaching staff -->
<!--  3) account staff  -->

<bean id="studentBean" name ="studentBean" class="com.felicityinfo.appOne.school.user">
	<property name="type" value="student"></property>
</bean>

<bean id="teachstaffBean" name ="teachstaffBean" class="com.felicityinfo.appOne.school.user">
	<property name="type" value="teachingStaff"></property>
</bean>

<bean id="accountstaffBean" name ="accountstaffBean" class="com.felicityinfo.appOne.school.user">
	<property name="type" value="accountStaff"></property>
</bean>

</beans>
